@model List<Hire>


@if (TempData["Success"] != null)
{
    <h2 style="color:red">@TempData["Success"]</h2>
}

<div class="container">

    <div class="row pt-3 pb-4">
        <div>
            <h1>Kitap Kiralamaları</h1>
        </div>
    </div>

    <table class="table table-bordered" style="width: 100%; border:2px solid #d8d8d8;">
        <thead>
            <tr>
                <th>Id</th>
                <th>Öğrenci Id</th>
                <th>KitapId</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var hire in Model)
            {
                <tr>
                    <td>@hire.Id</td>
                    <td>@hire.StudentId</td>
                    <td>@hire.Book!.BookName</td>
                    <td>
                        <a asp-controller="Hire" asp-action="AddUpdate" asp-route-id="@hire.Id" type="button" class="btn btn-success" style="width:250px">Güncelle</a>
                    </td>
                    <td>
                        <a asp-controller="Hire" asp-action="Delete" asp-route-id="@hire.Id" type="button" class="btn btn-danger" style="width:250px">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="row pt-3 pb-2">
        <div>
            <a asp-controller="Hire" asp-action="AddUpdate" class="btn btn-lg btn-primary" type="button">Yeni Kiralama Kaydı Oluştur</a>
        </div>
    </div>


</div>

